<Window x:Class="MMIKinect.Network.ConnectionsInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection au serveur" Height="190" Width="300" ResizeMode="NoResize"
        >
    <StackPanel Width="Auto" Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Adresse du serveur" Margin="2"/>
        <TextBox x:Name="_serverAdress" Margin="2"/>
        <TextBlock Text="Port du serveur" Margin="2"/>
        <TextBox x:Name="_portServer" Margin="2"/>
        <Button Content="Connection" Margin="2" Click="OnClickConnection"/>
    </StackPanel>
</Window>
